<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.benja.wordfun.setlist.SetListFragment">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:hint="筛选单词集"
            android:singleLine="true"
            android:textSize="20sp"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:background="@drawable/search_edit"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="140dp">
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/setList_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/setList"
                    android:overScrollMode="never"
                    android:layoutAnimation="@anim/layout_anim_slide_left_in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </android.support.v4.widget.SwipeRefreshLayout>
            <ImageView
                android:id="@+id/setList_netHint_img"
                android:layout_gravity="center"
                android:background="@color/dark"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
